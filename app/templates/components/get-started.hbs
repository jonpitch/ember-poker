<div class="row">
  <form class="col l12 m12 s12">
    <div class="row">
      {{! small blind }}
      <div class="input-field col l6 m6 s12">
        <input id="small-blind" type="text" class="validate" />
        <label for="small-blind">Small Blind</label>
      </div>

      {{! big blind }}
      <div class="input-field col l6 m6 s12">
        <input disabled id="big-blind" type="text" class="validate" />
        <label for="big-blind">Big Blind</label>
      </div>
    </div>
    <div class="row">
      {{! use ante? }}
      <div class="col s12">
        <input type="checkbox" id="ante" />
        <label for="ante">Ante?</label>
      </div>
    </div>
    <div class="row">
      {{! start game }}
      <div class="col s12 right-align">
        {{link-to 'Start Game' 'game' classNames="waves-effect waves-light btn"}}
      </div>
    </div>
  </form>
</div>
