<div class="container">
  <div class="row">
    <div class="col s12">
      {{#link-to 'games.add'}}{{md-btn text='Add Game'}}{{/link-to}}
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      {{#if model}}
        {{#md-card-collapsible accordion=false}}
          {{#each game in model}}
            {{#md-collapsible icon="mdi-image-filter-drama" title=game.name}}
              Lorem ipsum dolor sit amet.
            {{/md-collapsible}}
          {{/each}}
        {{/md-card-collapsible}}
      {{else}}
        <p>You currently have no recent games.</p>
      {{/if}}
    </div>
  </div>
</div>
